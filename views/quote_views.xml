      <field name="model">ccn.service.quote</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="CCN Service Quote">
          <sheet>

            <!-- Cabecera sin repetir "Sitio" -->
            <group>
              <group>
                <field name="name"/>
              </group>
              <group string="Modo de presentación">
