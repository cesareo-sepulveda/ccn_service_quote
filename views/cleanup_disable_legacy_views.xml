<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="0">

    <!-- Desactiva la vista heredada que metía los tabs de Sitio -->
    <record id="ccn_view_quote_form_tabs" model="ir.ui.view">
      <field name="name">ccn.quote.form.tabs (DISABLED)</field>
      <field name="model">ccn.service.quote</field>
      <field name="inherit_id" ref="ccn_service_quote.ccn_view_quote_form"/>
      <field name="active">False</field>
      <!-- arch mínimo por si el xmlid no existe y se crea como desactivado -->
      <field name="arch" type="xml">
        <xpath expr="//sheet" position="inside">
          <separator string="(legacy tabs disabled)"/>
        </xpath>
      </field>
    </record>

    <!-- Desactiva la variante que añadía 'Sitios / Resumen Global' -->
    <record id="ccn_view_quote_form_sites" model="ir.ui.view">
      <field name="name">ccn.quote.form.sites (DISABLED)</field>
      <field name="model">ccn.service.quote</field>
      <field name="inherit_id" ref="ccn_service_quote.ccn_view_quote_form"/>
      <field name="active">False</field>
      <field name="arch" type="xml">
        <xpath expr="//sheet" position="inside">
          <separator string="(legacy sites disabled)"/>
        </xpath>
      </field>
    </record>

  </data>
</odoo>
