<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Vista del asistente -->
    <record id="view_add_package_wizard_form" model="ir.ui.view">
        <field name="name">ccn.service.add.package.wizard.form</field>
        <field name="model">ccn.service.add.package.wizard</field>
        <field name="arch" type="xml">
            <form string="Agregar paquete a la cotización">
                <group>
                    <field name="package_id" options="{'no_create': False}"/>
                </group>
                <footer>
                    <button name="action_apply"
                            type="object"
                            class="btn-primary"
                            string="Agregar a la cotización"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción para abrir el asistente -->
    <record id="action_open_add_package_wizard" model="ir.actions.act_window">
        <field name="name">Agregar paquete</field>
        <field name="res_model">ccn.service.add.package.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
